/* pages/about/about.wxss */
page{
  background-color: #F5F5F5
}
.abform{
  width: 750rpx;
  height:210rpx;
  margin-bottom: 40rpx;
  background-color: white;
  border-style:6px solid #F5F5F5;  
}
.ab1{
  display: flex;
  padding: 15px;
  align-items: center;
  border-bottom: 1px solid #F5F5F5;
  background-color: white;
  padding-top: 20px;
}
.head{
  overflow: hidden;
  border-radius: 60%;
  width: 170rpx;
  height:170rpx;
  margin: 16rpx 60rpx;
}
.name{
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
  width: 280rpx;
  height:210rpx;
  margin-top: 60rpx;
  margin-left: 50rpx;
  font-size: 30rpx;
}
.float{
  float: left;
}
.listimage{
  position: absolute;
  top: 18px;
  right: 25px;
  width: 25px;
  height: 25px;
  background-repeat: no-repeat;
  background-size: 100% 100%; 
}
.ab2{
  display: inline-block;
  width: 20px;
  margin-right:5px; 
}
.ab2 image{
  width: 100%;
  height: 20px;
  vertical-align: -2px;
}
.ab3{
  display: inline-block;
  font-size: 14px;
  color: black;
}